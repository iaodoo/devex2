<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Product Form Inheritance -->
        <record id="ia_product_normal_form" model="ir.ui.view">
            <field name="name">ia_product_normal_form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="allowed_company_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                    <field name="allowed_country_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                    <field name="allowed_state_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                </xpath>

            </field>            
        </record>

          <!-- Product Template Form Inheritance -->
        <record id="ia_product_template_normal_form" model="ir.ui.view">
            <field name="name">ia_product_template_normal_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority">120</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="allowed_company_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                    <field name="allowed_country_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                    <field name="allowed_state_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                </xpath>
            </field>
        </record>

</odoo>
